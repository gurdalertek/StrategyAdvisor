{
  "name": "strategy-advisor",
  "version": "1.0.0",
  "description": "strategy-advisor server",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "NODE_ENV=development ./node_modules/.bin/netlify-lambda serve src",
    "build": "NODE_ENV=production ./node_modules/.bin/netlify-lambda build src",
    "server": "nodemon --max-old-space-size=512 server.js --exec babel-node --presets babel-preset-env",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Ahmet Lekesiz",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^6.3.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": ">=6.4.6",
    "netlify-lambda": "^2.0.15",
    "nodemon": "^2.0.19",
    "pm2-health": "^1.11.8"
  },
  "engines": {
    "node": "16.x",
    "npm": "7.10.0"
  }
}
